<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/ramos_menu_panel" 
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:minHeight="52dip"
   android:orientation="vertical" 
   android:background="@drawable/sms_bg_menu"
   android:gravity="center"
   android:visibility="gone">
   
    <View 
         android:id="@+id/bottom_line"
         android:layout_width="match_parent"
         android:layout_height="0.7dip"
         android:background="#d9d9d9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/sms_bg_title">

       <TextView
            android:id="@+id/contact_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ramos_sms_btn_add_selector"
            android:drawablePadding="0dip"
            android:paddingTop="6dip"
            android:paddingBottom="4dip"
            android:textColor="@color/ramos_top_menu_color"
            android:textSize="@dimen/ramos_textSizeSecondary"
            android:text="@string/contact_add"
            android:visibility="gone"
            />
       <TextView
            android:id="@+id/contact_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ramos_sms_btn_view_selector"
            android:drawablePadding="0dip"
            android:paddingTop="6dip"
            android:paddingBottom="4dip"
            android:textColor="@color/ramos_top_menu_color"
            android:textSize="@dimen/ramos_textSizeSecondary"
            android:text="@string/contact_view"
            android:visibility="gone"
            />
       <TextView
            android:id="@+id/contact_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ramos_sms_btn_call_selector"
            android:drawablePadding="0dip"
            android:paddingTop="6dip"
            android:paddingBottom="4dip"
            android:textColor="@color/ramos_top_menu_color"
            android:textSize="@dimen/ramos_textSizeSecondary"
            android:text="@string/menu_call"
            android:visibility="gone"
            />
       <TextView
            android:id="@+id/blacklist_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ramos_sms_btn_view_selector"
            android:drawablePadding="0dip"
            android:paddingTop="6dip"
            android:paddingBottom="4dip"
            android:textColor="@color/ramos_top_menu_color"
            android:textSize="@dimen/ramos_textSizeSecondary"
            android:text="@string/black_list_add"
            android:visibility="gone"
            />
            
       <TextView
            android:id="@+id/blacklist_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/ramos_sms_btn_view_selector"
            android:drawablePadding="0dip"
            android:paddingTop="6dip"
            android:paddingBottom="4dip"
            android:textColor="@color/ramos_top_menu_color"
            android:textSize="@dimen/ramos_textSizeSecondary"
            android:text="@string/black_list_cancel"
            android:visibility="gone"
            />

    </LinearLayout>
    
</LinearLayout>
       

