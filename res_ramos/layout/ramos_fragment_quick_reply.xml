<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    android:orientation="vertical" >
    
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" 
        android:listPreferredItemHeight="58dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ramos_color_line"/>

    <TextView 
        android:id="@+id/edit_quick_reply"
	    android:layout_width="match_parent"
	    android:layout_height="58dip"	
	    android:text="@string/edit_quick_reply"
	    android:gravity="center"
	    android:textSize="18sp"
	    android:textColor="#23a8fe"
        />
    <!-- [ramos] added by liting 20151019 for BUG0009029 -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ramos_color_line"/>
    <!-- [ramos] end liting BUG0009029 -->    

</LinearLayout>
