<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/ramos_dialog">
    
    
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ramos_dialog_height_title"
        android:gravity="center"
        android:text="@string/edit"
        android:textColor="#505050"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/ramos_color_line" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="130dip">

        
        <EditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:minHeight="64dip"
            android:textColor="#505050"
            android:textColorHint="#c8c8c8"
            android:hint="@string/input_content"
            android:textSize="15sp" 
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:maxLines="3"
            android:maxLength="128"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sms_bg_inputbox"/>
            
    </LinearLayout>

    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ramos_color_line"/>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/ramos_dialog_height_title"
        android:orientation="horizontal" 
        android:gravity="center">

        <Button  
            android:id="@+id/btn_left"   
	        android:layout_width="fill_parent"  
	        android:layout_height="fill_parent"  
	        android:text="@string/no"   
	        android:layout_weight="1"
	        android:textColor="@color/ramos_dialog_button" 
	        android:textSize="16dp"
	        android:background="@null"/>  
        
        <View
	        android:layout_width="0.5dp"
	        android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:background="@drawable/ramos_color_line"/>   
        
        <Button  
	        android:id="@+id/btn_right"  
	        android:layout_width="fill_parent"  
	        android:layout_height="fill_parent"  
	        android:layout_weight="1"
	        android:text="@string/save"   
	        android:textColor="@color/ramos_dialog_button" 
	        android:textSize="16dp"
	        android:background="@null"/> 

    </LinearLayout>

</LinearLayout>
