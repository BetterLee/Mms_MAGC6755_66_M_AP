<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ramos_dialog">
    
    <LinearLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/date_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_marginLeft="16dip"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="45px"
            android:textColor="@color/ramos_actionbar_title"
            android:text="@string/setting_date"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
            
        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_marginRight="22dip"
            android:maxLines="1"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="45px"
            android:textColor="@color/menu_summary_color"
            android:text="@string/setting_date"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"/>
            
        <ImageView android:id="@+id/guide"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="16dip"
            android:src="@drawable/ramos_guide" 
            android:layout_gravity="center_vertical"/>
            
    </LinearLayout>
    
    <View 
         android:id="@+id/bottom_line"
         android:layout_width="match_parent"
         android:layout_height="0.7dip"
         android:background="@color/top_line"/>
         
    <LinearLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

    
        <TextView
            android:id="@+id/time_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_marginLeft="16dip"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="45px"
            android:textColor="@color/ramos_actionbar_title"
            android:text="@string/setting_time"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
            
        <TextView
            android:id="@+id/time_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_marginRight="22dip"
            android:maxLines="1"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="45px"
            android:textColor="@color/menu_summary_color"
            android:text="@string/setting_time"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"/>
            
        <ImageView android:id="@+id/guide"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="16dip"
            android:src="@drawable/ramos_guide" 
            android:layout_gravity="center_vertical"/>


    </LinearLayout>
    
    <View 
         android:id="@+id/bottom_line"
         android:layout_width="match_parent"
         android:layout_height="0.7dip"
         android:background="@color/top_line"/>
         
</LinearLayout>
