<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/ramos_dialog">
    
    
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ramos_dialog_height_title"
        android:gravity="center"
        android:text="@string/confirm_dialog_title"
        android:textColor="#505050"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/ramos_color_line" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/confirm_delete_selected_messages"
            android:textColor="#505050"
            android:textSize="16sp" 
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="53dip"
            android:layout_marginBottom="53dip"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

    </LinearLayout>

    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ramos_color_line"/>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/ramos_dialog_height_title"
        android:orientation="horizontal" 
        android:gravity="center">

        <Button  
            android:id="@+id/btn_left"   
	        android:layout_width="fill_parent"  
	        android:layout_height="fill_parent"  
	        android:text="@string/no"   
	        android:layout_weight="1"
	        android:textColor="@color/ramos_dialog_button" 
	        android:textSize="16dp"
	        android:background="@null"/>  
        
        <View
	        android:layout_width="0.5dp"
	        android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:background="@drawable/ramos_color_line"/>   
        
        <Button  
	        android:id="@+id/btn_right"  
	        android:layout_width="fill_parent"  
	        android:layout_height="fill_parent"  
	        android:layout_weight="1"
	        android:text="@string/delete"   
	        android:textColor="@color/ramos_dialog_button" 
	        android:textSize="16dp"
	        android:background="@null"/> 

    </LinearLayout>

</LinearLayout>
