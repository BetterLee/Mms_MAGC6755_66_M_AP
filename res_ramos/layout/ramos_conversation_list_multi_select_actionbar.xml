<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_title_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/cancel"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_gravity="left|center_vertical"
        android:textSize="@dimen/ramos_actionbar_text"
        android:textColor="@color/ramos_dialog_button"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="16dip"
        android:text="@string/string_btn_cancel"/>
    
            
    <Button android:id="@+id/selection_menu"
        android:singleLine="true"
        android:textSize="@dimen/ramos_actionbar_text"
        android:textColor="@color/ramos_actionbar_title"
        android:layout_gravity="center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="0dip"/>

    
    <TextView
        android:id="@+id/selecte_all"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/ramos_actionbar_text"
        android:textColor="@color/ramos_dialog_button"
        android:layout_gravity="center_vertical"
        android:layout_width="0dip"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dip"
        android:layout_alignParentRight="true"/>
        
</LinearLayout>
