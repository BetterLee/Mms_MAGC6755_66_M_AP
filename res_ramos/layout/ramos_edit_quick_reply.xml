<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    android:orientation="vertical" >
    
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" 
        android:listPreferredItemHeight="58dp"
        />
        
    <TextView android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_quick_reply_content"
        android:textColor="@color/ramos_actionbar_title"
        android:textSize="18sp"
        android:layout_weight="1.0"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/ramos_color_line"/>

    <TextView 
        android:id="@+id/edit_quick_reply"
	    android:layout_width="match_parent"
	    android:layout_height="48dip"	
	    android:text="@string/add_quick_reply"
	    android:gravity="center"
	    android:textSize="12sp"
	    android:textColor="@color/ramos_menu_color"
	    android:drawableTop="@drawable/ramos_sms_btn_add_selector"    
        />
</LinearLayout>
